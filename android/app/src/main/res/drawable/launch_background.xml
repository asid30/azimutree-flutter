<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:gravity="fill" android:src="@drawable/background"/>
    </item>
    <item>
        <!-- Scale the splash image to a percentage of the screen and center it
             to avoid cropping on devices with different aspect ratios. -->
        <scale android:drawable="@drawable/splash"
               android:scaleGravity="center"
               android:scaleWidth="60%"
               android:scaleHeight="60%" />
    </item>
</layer-list>
